<div id="new_subcategory" class="modal">
    <div id="sendMailRecoverPassword_container" class="shadow dialog_container">
        <div id="sendMailRecoverPassword_header" class ="dialog_header">
            <img width="72px" height="72px" src="../images/ic_edit_action_white.svg"/>
            <h3>{{dialog_title}}</h3>
        </div>
        <div id="sendMailRecoverPassword_content" class ="dialog_content">
            <form>
                <div class="form-group col-md-12">
                    <label for="subcategory_name" class="labelForm">{{subcategory_name}}</label>
                    <input type="text" class="form-control" id="subcategory_name" aria-describedby="emailHelp" placeholder="{{subcategory_placeholder}}" required value={{value}}>
                    <div id="subcategory_name_error" class="invalid-tooltip">{{compulsory_field}}</div>
                </div>
            </form>
            <div id="buttons">
                <button class ="button_green dialog_button full_width" {{{action}}}>{{save_subcategory}}</button>
                <button id="button_cancel" class="button_grey dialog_button full_width" onClick="$('#new_subcategory').addClass('hidden').removeClass('visible')">{{cancel}}</button>
            </div>
        </div>
    </div>
</div>