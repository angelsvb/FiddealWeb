<div id="support_dialog" class="modal">
    <div id="technicalSupp_container" class="shadow dialog_container">
        <div id="technicalSupp_header" class ="dialog_header">
            <img class="dialogIcon" src="../images/ic_support.svg"/>
            <h3>{{dialog_title}}</h3>
        </div>
        <div id="technicalSupp_content" class ="dialog_content">
            <form>
                <div class="form-group col-md-12">
                    <label for="inputCategory">{{label_category}}</label>
                    <select id="inputCategory" class="form-control selector">
                        <option value="0" selected>{{select_default_option_support}}</option>
                        <option value="1">{{select_option_1}}</option>
                        <option value="2">{{select_option_2}}</option>
                        <option value="3">{{select_option_3}}</option>
                        <option value="4">{{select_option_4}}</option>
                    </select>
                    <div id="inputCategory_err" class="invalid-tooltip" style="display:none"> {{compulsory_field}} </div>
                </div>
                <div class="form-group col-md-12">
                    <label for="inputTopic">{{topic}}</label>
                    <input type="text" class="form-control" id="inputTopic" aria-describedby="emailHelp" placeholder="{{topic}}">
                    <div id="inputTopic_err" class="invalid-tooltip" style="display:none"> {{compulsory_field}} </div>
                </div>
                <div class="form-group col-md-12">
                    <label for="inputMessage">{{message}}</label>
                    <textarea style="resize:horizontal" maxlength="250" id="inputMessage" rows="4" placeholder="{{message_placeholder}}"></textarea>
                    <small id="textAreaHelp" class="form-text text-muted">{{max_250_chars}}</small>
                    <div id="inputMessage_err" class="invalid-tooltip" style="display:none"> {{compulsory_field}} </div>
                </div>
            </form>
            <button class ="button_green dialog_button full_width" {{{sendSupport}}}>{{send}}</button>
            <button class="button_grey dialog_button full_width" onClick="$('#support_dialog').addClass('hidden').removeClass('visible')">{{cancel}}</button>
        </div>
    </div>
</div>